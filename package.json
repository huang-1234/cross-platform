{
  "name": "cross-platform",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{js,ts,tsx,md,json}\""
  },
  "devDependencies": {
    "prettier": "^3.0.3",
    "turbo": "^1.10.16"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
